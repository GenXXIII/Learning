@using Registation.ViewModels
@{
    ViewData["Title"] = "Login";
    Layout = "/Views/Shared/_AccountLayout.cshtml";
}

@model LoginViewModels;
@{
    ViewData["Title"] = "Register";
    Layout = "/Views/Shared/_AccountLayout.cshtml";
}
<div class="account-container">
    <div class="account-box">
        <h2 class="account-title">Login</h2>
        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div>
                <label style="user-select:none">
                    <input asp-for="RememberMe" class="form-check-input" />
                    @Html.DisplayNameFor(model => model.RememberMe)
                </label>
            </div>
            <div>
                <a asp-controller="Account" asp-action="EmailVerify" class="text-decoration-none">Forgot Password?</a>
            </div>
            <input type="submit" value="Login" class="btn btn-success w-100 p-2" />
            <div class="text-center w-100 p-2 mt-3">
                <a asp-controller="Home"
                   asp-action="Index"
                   class="btn btn-primary text-decoration-none w-100 p-2"
                   role="button">
                    Back
                </a>
            </div>

        </form>
    </div>
</div>